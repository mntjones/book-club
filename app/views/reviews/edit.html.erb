<h1 style="text-align: center">Edit Your Review for <%= @book.title %></h1>

<br>
<% if @review.errors.any? %>
    <font color="red"><%= @review.errors.full_messages.first %></font>
<% end %>
<br><br>

<div style="padding: 20px; background: pink">
<%= form_for ([@user, @review]) do |f| %>
	<%= f.label :comments, "Enter Comments" %>
	<%= f.text_area :comments %><br>
	<%= f.label :rating, "Enter Rating - 1 to 5 (best)" %>
	<%= f.text_field :rating %><br>
	<%= f.submit %>

<% end %>
</div>