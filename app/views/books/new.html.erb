<h1>Add a New Book for Book Club</h1>

<%= form_tag '/books', method: 'post' do %>
	<%= label_tag(:title, "Title") %>
  <%= text_field_tag(:title) %><br>

  <%= label_tag(:author, "Author") %>
  <%= text_field_tag(:author) %><br>

  <%= label_tag(:genre, "Genre") %>
  <%= text_field_tag(:genre) %><br>

  <%= label_tag(:pages, "Number of Pages") %>
  <%= text_field_tag(:pages) %><br>

  <%= label_tag(:month_assigned, "Month Assigned for Book") %>
	<%= select_tag :month_assigned, options_for_select(@grouped_options) %> <br>

	<%= label_tag(:year_assigned, "Year assigned - YYYY format, please.") %>
  <%= text_field_tag(:year_assigned) %><br>

	<%= submit_tag("Create New Book") %>
<% end %>